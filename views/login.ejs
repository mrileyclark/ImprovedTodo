<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />    
    <link rel="stylesheet" href="css/style.css" />
    <script
    src="https://kit.fontawesome.com/d6ab8d0597.js"
    crossorigin="anonymous"
  ></script>
  </head>
  <body>
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <% messages.info.forEach(
    el => { %>
    <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %> <% } %>
    <section id="container">
      <h1 id="heading">Login</h1>
    <form action="/login" method="POST" class="signup-form">
      <input type="email" name="email" placeholder="&#xf0e0; Email"
          style="font-family: Arial, 'Font Awesome 5 Free'"
        />
      <input type="password" name="password" placeholder="&#xf023; Password"
          style="font-family: Arial, 'Font Awesome 5 Free'"/>
      <input type="submit" class="btn"/>
      <p>Don't have an account?<a href="/signup" class="links"> Signup</a></p>
    </form>
  </body>
</html>
